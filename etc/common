# kochanski

KRYTEN_HOME=${TOPLEVEL:=${KRYTEN_HOME}}

KRYTEN_HOME=$(cd ${KRYTEN_HOME}; pwd)
export KRYTEN_HOME

KRYTEN_BIN=${KRYTEN_HOME}/bin
export KRYTEN_BIN

KRYTEN_ETC=${KRYTEN_HOME}/etc
export KRYTEN_ETC

KRYTEN_LIB=${KRYTEN_HOME}/lib
export KRYTEN_LIB

KRYTEN_SRC=${KRYTEN_HOME}/src
export KRYTEN_SRC

KRYTEN_VAR=${KRYTEN_HOME}/var
export KRYTEN_VAR

KRYTEN_DB=${KRYTEN_VAR}/db
export KRYTEN_DB

KRYTEN_LOG=${KRYTEN_VAR}/log
export KRYTEN_LOG

PATH=${KRYTEN_BIN}:${PATH}
export PATH

LD_LIBRARY_PATH=${KRYTEN_LIB}:${LD_LIBRARY_PATH}
export LD_LIBRARY_PATH

PYTHONPATH=${LD_LIBRARY_PATH}:${PYTHONPATH}
PYTHONPATH=${KRYTEN_LIB}/python:${PYTHONPATH}
export PYTHONPATH

KRYTEN_CONFIGUREFLAGS="--prefix=${KRYTEN_HOME}" 
export KRYTEN_CONFIGUREFLAGS

# python

PYTHON=python
PYTHONFLAGS=

KRYTEN_EXTRAS="			\
	kochanski		\
"
for x in ${KRYTEN_EXTRAS}; do
	TOPLEVEL=${KRYTEN_HOME}/extras/${x}
	. ${TOPLEVEL}/etc/common
done
